<div class="d-flex flex-row w-100 pr-5 " style="height: calc(100% - 50px)">
  <!--サイドバーコンテンツ-->
  <%= render "layouts/sidenav" %>
    <div class="container mt-5">
      <div class="row">
        <div class="col-6">
          <% @shops.each do |shop| %>
            <div class="card mb-1 shadow-sm">
              <div class="card-body  text-secondary font-weight-bold">
                <div class="row">
                  <div class="col-3">
                    <%= image_tag shop.get_profile_image(100,100), class: "rounded-circle"%>
                  </div>
                  <div class="col-5">
                    <p class="card-text"><%= shop.name %></p>
                    <p class="card-text"><%= shop.email %></p>
                    <% if  shop.id == current_shop.id %>
                      <%= link_to  edit_shop_path(shop) do %>
                        <span class=" rounded-circle p-2 shadow-sm"style="background-color: #dcdefc;"><i class="fas fa-edit"  style=" color: #737df5; "></i></span>
                      <% end %>
                    <% end %>
                    <% if current_shop != shop %>
                      <%= link_to  chat_path(shop) do %>
                        <span class=" rounded-circle p-2 shadow-sm"style="background-color: #fff177;"><i class="far fa-comments"  style=" color: #f4a228; "></i></span>
                      <% end %>
                    <% end %>
                  </div>
                  <div class="col-4">

                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <div class="col-6">
          <div class="card mb-1 shadow-sm">
            <div class="card-body  text-secondary font-weight-bold ">
              <p class="card-text">合計共有数: <%= @shop.posts.count %></p>
              <p class="card-text">合計コメント件数:<%= @count %></p>
              <p class="card-text">合計GOOD数:</p>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
