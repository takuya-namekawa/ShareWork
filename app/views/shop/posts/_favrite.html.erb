<% if post.favorited_by?(current_shop) %>
  <%= link_to post_favorites_path(post),method: :delete, remote: true, class: "text-reset text-decoration-none"  do %>
    <span class=" rounded-circle p-2 shadow-sm"style="background-color: #dcfcdf;"><i class="fas fa-thumbs-up"></i><%= post.favorites.count +  post.management_favorites.count%></span> GOOD!!
  <% end %>
<% else %>
  <%= link_to post_favorites_path(post),method: :post , remote: true, class: "text-reset text-decoration-none" do %>
    <span class=" rounded-circle p-2 shadow-sm"style="background-color: #dcfcdf;"><i class="far fa-thumbs-up"></i><%= post.favorites.count +  post.management_favorites.count%></span> GOOD!!
  <% end %>
<% end %>