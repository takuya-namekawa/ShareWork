<div class="d-flex flex-row w-100 pr-5 " style="height: calc(100% - 50px)">
  <!--サイドバーコンテンツ-->
  <%= render "layouts/sidenav" %>
    <div class="container mt-5">
      <div class="row">
        <div class="col">
          <button type="button" class="btn btn-primary mb-3" data-toggle="modal" data-target="#exampleModal">
            Report!!
          </button>
          クリスマス(全店舗合計)
          <%  @christmases.each do |christmas| %>
            金額<%= @shop_total_amount += christmas.total_amount %>
            予約金額<%= @shop_tptal_booking_target += christmas.booking_amount %>
          <% end %>
          <table class="table ">
            <%  @christmases.each do |christmas| %>
              <tr>
                <td>
                  <%= christmas.shop.name %><br>
                  <%= christmas.year %>年度
                </td>
                <td>
                  予約目標:<%=  christmas.booking_target.to_s(:delimited) %>円<br>
                  目標金額:<%=  christmas.target_amount.to_s(:delimited) %>円
                </td>
                <td>FF金額:<%=  christmas.ff_amount.to_s(:delimited) %>円</td>
                <td>店売金額:<%=  christmas.store_sales_amount.to_s(:delimited) %>円</td>
                <td>
                  予約金額:<%=  christmas.booking_amount.to_s(:delimited) %>円
                  達成金額:<%=  christmas.total_amount.to_s(:delimited) %>円
                </td>
                <td>
                  <% if christmas.shop_id == current_shop.id %>
                    <%= link_to "Edit", edit_christmase_path(christmas) %><br>
                    <%= link_to "Delete", christmase_path(christmas), method: :delete,"data-confirm" => "本当に消しますか？" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </table>
        </div>
    </div>
  </div>
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">新規投稿</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_for @christmas, url: christmases_path do |f| %>
        <div class="modal-body">
          <div class="form-group">
            <%= f.label :year, "年度" %>
            <%= f.text_field :year, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :booking_target, "予約目標" %>
            <%= f.text_field :booking_target, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :target_amount, "目標金額" %>
            <%= f.text_field :target_amount, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :booking_amount, "予約金額" %>
            <%= f.text_field :booking_amount, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :ff_amount, "FF金額" %>
            <%= f.text_field :ff_amount, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :store_sales_amount, "店売金額" %>
            <%= f.text_field :store_sales_amount, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :total_amount, "達成金額" %>
            <%= f.text_field :total_amount, class:"form-control" %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
          <%= f.submit "投稿する", class:"btn btn-primary" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>