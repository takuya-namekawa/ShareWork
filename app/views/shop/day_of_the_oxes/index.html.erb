<div class="d-flex flex-row w-100 pr-5 " style="height: calc(100% - 50px)">
   <!--サイドバーコンテンツ-->
   <%= render "layouts/sidenav" %>
 <div class="container mt-5">
  <div class="row">
    <div class="col">
       <button type="button" class="btn btn-primary mb-3" data-toggle="modal" data-target="#exampleModal">
        Report!!
      </button>
      土用の丑の日
      <table class="table ">
      <%  @day_of_the_oxes.each do |eel| %>
<tr>




  <td><%= eel.shop.name %><br>

  <%= eel.year %>年度</td>


  <td>予約目標:<%=  eel.booking_target %>件<br>
  目標金額:<%=  eel.target_amount %>件</td>

  <td>予約金額:<%=  eel.booking_amount %>円</td>


  <td>店売金額:<%=  eel.store_sales_amount %>円</td>
  <td>達成金額:<%=  eel.total_amount %>円</td>

<td><%= link_to "Edit", edit_day_of_the_ox_path(eel) %>
 <% if eel.shop_id == current_shop.id %>
                    <%= link_to "Delete", day_of_the_ox_path(eel), method: :delete,"data-confirm" => "本当に消しますか？" %>
                    <% end %></td>

</tr>
      <% end %>
      </table>
    </div>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">新規投稿</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_for @day_of_the_ox, url: day_of_the_oxes_path do |f| %>
        <div class="modal-body">
          <div class="form-group">
            <%= f.label :year, "年度" %>
            <%= f.text_field :year, class:"form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :booking_target, "予約目標" %>
            <%= f.text_field :booking_target, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :target_amount, "目標金額" %>
            <%= f.text_field :target_amount, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :booking_amount, "予約金額" %>
            <%= f.text_field :booking_amount, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :store_sales_amount, "店売金額" %>
            <%= f.text_field :store_sales_amount, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :total_amount, "達成金額" %>
            <%= f.text_field :total_amount, class:"form-control" %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
          <%= f.submit "投稿する", class:"btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
 </div>