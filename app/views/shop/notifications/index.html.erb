<div class="d-flex flex-row w-100" style="height: calc(100% - 50px)">
  <!--サイドバーコンテンツ-->
  <%= render "layouts/sidenav" %>
    <div class="container mt-5">
      <h4 class=" font-weight-bold bold border-bottom mb-3" style=" color: #6169d0; ">Chat Info</h4>
      <div class="row">
        <div class="col">
           <div class="card mb-1 shadow-sm">
              <div class="card-body  text-secondary font-weight-bold">
                <%= link_to notification_all_destroy_path(@notifications), method: :delete,"data-confirm" => "全ての通知を消しますが宜しいですか？",class: "text-decoration-none" do %>
                  <span data-toggle="tooltip"  title="全ての通知を削除する" ><span class=" rounded-circle p-2 shadow-sm ml-1"style=" background-color: #f0b3bf;"><i class="fas fa-eraser" style=" color: #fa5c7c; "></i></span></span>
                <% end %>
                <% notifications = @notifications.where.not(visitor_id: current_shop.id) %>
                  <% if notifications.exists? %>
                    <%= render notifications %>
                  <% else %>
                    <p class="m-4">通知はありません</p>
                <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>